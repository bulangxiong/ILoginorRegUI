<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/me_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:minHeight="150dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:background="@drawable/zsb"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginTop="140dp"
                android:background="@drawable/buju"
                android:paddingBottom="50dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/me_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:gravity="center"
                    android:text="名字"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:id="@+id/me_info"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginRight="24dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/zhiliao" />

                    <TextView
                        android:id="@+id/m_ziliao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="44dp"
                        android:layout_marginTop="2dp"
                        android:text="个人资料"
                        android:textColor="#000"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="44dp"
                        android:background="#ededed" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/me_circle"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="24dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/fei" />

                    <TextView
                        android:id="@+id/m_quanzi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="44dp"
                        android:text="我的圈子"
                        android:textColor="#000"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="44dp"
                        android:background="#ededed" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/me_foot"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="24dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/foot" />

                    <TextView
                        android:id="@+id/m_zouji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="44dp"
                        android:text="我的足迹"
                        android:textColor="#000"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="44dp"
                        android:background="#ededed" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/me_wallet"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="24dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/money" />

                    <TextView
                        android:id="@+id/m_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="44dp"
                        android:text="我的钱包"
                        android:textColor="#000"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="44dp"
                        android:background="#ededed" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/me_address"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="24dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/home" />

                    <TextView
                        android:id="@+id/m_souhuodizhi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="44dp"
                        android:text="我的收货地址"
                        android:textColor="#000"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="44dp"
                        android:background="#ededed" />

                </RelativeLayout>
                <Button
                    android:layout_marginTop="10dp"
                    android:id="@+id/t_login"
                    android:layout_gravity="center"
                    android:background="#f00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退出登录"/>
            </LinearLayout>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/me_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignTop="@+id/line1"
                android:layout_centerHorizontal="true"
                android:background="@drawable/girl_little"
                android:layout_marginTop="-40dp"
                fresco:roundAsCircle="true" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>