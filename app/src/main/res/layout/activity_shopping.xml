<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="9"></android.support.v4.view.ViewPager>

    <RadioGroup
        android:id="@+id/btn_group"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rectangle"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb1"
            style="@style/main_bottom_btn_style"
            android:checked="true"
            android:drawableTop="@drawable/one_selector" />

        <RadioButton
            android:id="@+id/rb2"
            style="@style/main_bottom_btn_style"
            android:layout_width="72dp"
            android:drawableTop="@drawable/two_selector" />

        <RadioButton
            android:id="@+id/rb3"
            style="@style/main_bottom_btn_style"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_marginTop="-2dp"
            android:drawableTop="@drawable/car_t" />

        <RadioButton
            android:id="@+id/rb4"
            style="@style/main_bottom_btn_style"
            android:layout_width="72dp"
            android:drawableTop="@drawable/three_selector" />

        <RadioButton
            android:id="@+id/rb5"
            style="@style/main_bottom_btn_style"
            android:drawableTop="@drawable/four_selector" />
    </RadioGroup>

</RelativeLayout>


