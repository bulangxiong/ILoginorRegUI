<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_margin="10dp"
    android:orientation="horizontal">
    <CheckBox
        android:id="@+id/gou_item_money"
        android:layout_marginLeft="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/buju"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/gou_item_image"
            android:layout_width="80dp"
            android:layout_height="94dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/money" />
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/gou_item_title"
                    android:textSize="12sp"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="title"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal">
                      <TextView
                          android:id="@+id/gou_item_price"
                          android:layout_weight="1"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="ï¿¥520.06"/>

                    <TextView
                        android:id="@+id/gou_item_jian"
                        android:layout_width="wrap_content"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="-" />
                    <TextView
                        android:id="@+id/gou_item_num"
                        android:layout_width="wrap_content"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="1" />
                    <TextView
                        android:id="@+id/gou_item_jia"
                        android:layout_width="wrap_content"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="+" />
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
</LinearLayout>