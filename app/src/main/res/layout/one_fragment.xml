<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
     >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/sangang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/liebiao" />

            <EditText
                android:id="@+id/soushuokuang"
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/yuanjiao"
                android:hint="请输入你搜索的商品"
                android:padding="15dp"
                android:textColor="#000000"
                android:textColorHint="#000000" />

            <TextView
                android:id="@+id/soushuo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="搜索"
                android:textColor="#000"
                android:textSize="15sp" />
        </LinearLayout>


        <com.youth.banner.Banner
            android:layout_marginTop="20dp"
            android:layout_margin="20dp"
            android:id="@+id/banner"
            android:background="@drawable/buju"
            android:layout_width="match_parent"
            android:layout_height="200dp"></com.youth.banner.Banner>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bitmaper"
            android:gravity="center"
            android:text="热销新品"
            android:textColor="#ff0"
            android:textSize="20sp" />

        <android.support.v7.widget.RecyclerView
            android:padding="10dp"
            android:id="@+id/recycel_heng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bitmap"
            android:gravity="center"
            android:text="魔丽时尚"
            android:textColor="#ff0"
            android:textSize="20sp" />

        <android.support.v7.widget.RecyclerView
            android:padding="10dp"
            android:id="@+id/recycel_shu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bitmapyi"
            android:gravity="center"
            android:text="品质生活"
            android:textColor="#ff0"
            android:textSize="20sp" />

        <android.support.v7.widget.RecyclerView
            android:padding="10dp"
            android:id="@+id/recycel_shu1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"></android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>