<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="80dp">

        <ImageView
            android:id="@+id/souji"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="140dp"
            android:src="@drawable/souji" />

        <EditText
            android:id="@+id/reg_modile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="140dp"
            android:layout_toRightOf="@+id/souji"
            android:background="@null"
            android:hint="手机号"
            android:textColorHint="#fff"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="36dp"
        android:background="@android:color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/yanzheng"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/dun" />

        <EditText
            android:id="@+id/reg_yanzhengmima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/yanzheng"
            android:background="@null"
            android:hint="验证密码"
            android:password="true"
            android:textColorHint="#fff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/huoquyanzhengma"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:text="获取验证码" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="36dp"
        android:background="@android:color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/mima"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/suo" />

        <EditText
            android:id="@+id/reg_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/mima"
            android:background="@null"
            android:hint="登录密码"
            android:password="true"
            android:textColorHint="#fff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/reg_jiami"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:src="@drawable/yin" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="36dp"
        android:background="@android:color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lijidenglu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="36dp"
            android:textSize="18sp"
            android:text="已有账户？立即登录" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_reg"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:background="@drawable/aaaa"
            android:gravity="center"
            android:text="注册"
            android:textColor="#CC3299"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>